@using Ecommerce.UI.Extensions;
@model IEnumerable<SupplierViewModel>

@{
    ViewData["Title"] = "Suppliers List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info text-white" asp-action="Create" supress-by-claim-name="Supplier" supress-by-claim-value="C">New Supplier</a>
</p>
<table class="table table-hover">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @this.FormatDocument(item.SupplierType,item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td class="d-flex justify-content-end gap-1">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white" disable-by-claim-name="Supplier" disable-by-claim-value="R"><i class="fa fa-search"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" disable-by-claim-name="Supplier" disable-by-claim-value="U"><i class="fa fa-pencil"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" disable-by-claim-name="Supplier" disable-by-claim-value="D"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
