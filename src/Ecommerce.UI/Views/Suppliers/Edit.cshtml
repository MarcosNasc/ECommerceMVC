@model SupplierViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SupplierInputModel</h4>
<hr />
    <form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <vc:summary></vc:summary>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document" class="control-label"></label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>
         
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
         </div>
         <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SupplierType" class="control-label"></label> <br />
                <input type="radio" value="1" asp-for="SupplierType" checked /> Pessoa Física <br />
                <input type="radio" value="2" asp-for="SupplierType" /> Pessoa Jurídica
            </div>
            <input type="checkbox" asp-for="IsActive"/> Status
         </div>
        </div>
    </form>

    <div id="AddressTarget">
      <partial name="_AddressDetails"/>
    </div>  

    <h4>Products</h4>
    <hr />
    <partial name="../Products/_ProductsList" model=@Model.Products/>

<div class="modal fade show" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="myModalContent">
                <!-- Your modal content goes here -->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
